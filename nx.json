{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "npmScope": "shaker",
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nx/workspace/tasks-runners/default",
      "options": {
        "cacheableOperations": ["build", "test", "lint"],
        "parallel": 2
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"]
    }
  },
  "workspaceLayout": {
    "appsDir": "",
    "libsDir": "libs"
  }
}
